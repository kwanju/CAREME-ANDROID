<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animal.applyVolunteer.ApplyVolunteerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">



            <TextView
                style="@style/boxText"
                android:text="봉사정보"/>
            <LinearLayout style="@style/box">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정보란"
                    android:id="@+id/apply_volunteer_info"/>
            </LinearLayout>

            <TextView
                style="@style/boxText"
                android:text="봉사시간정보"
                />

            <LinearLayout style="@style/box">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow
                        android:background="#0079D6"
                        android:padding="5dp">

                        <TextView
                            android:text="시작시간"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:text="종료시간"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"/>
                    </TableRow>

                    <TableRow
                        android:background="#DAE8FC"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/apply_volunteer_start_time"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/apply_volunteer_end_time"
                            android:textAlignment="center" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <TextView
                style="@style/boxText"
                android:text="봉사예약 가능 날짜"/>
            <LinearLayout
                style="@style/box">
                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/apply_volunteer_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mcv_selectionColor="#a9dbf0cb"
                    app:mcv_showOtherDates="defaults" />
            </LinearLayout>


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/apply_volunteer_apply"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bootstrapText="봉사신청" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>